        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="استان"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/expandable_textSize_rows"
